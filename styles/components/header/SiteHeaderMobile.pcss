.mobile-header {
  justify-content: end;
  width: 100%;
}

.mobile-header__controls {
  position: relative;
  z-index: 30;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.menu-container {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 0;
  display: flex;
  align-items: center;
  padding: 32px 16px;
}

.menu-container__bg {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: var(--muzen-dark-brown);
  z-index: -1;
  will-change: opacity visibility;
}

.menu__logo {
  color: var(--muzen-light-brown);
  font-family: var(--muzen-nohemi);
  font-weight: bold;
  font-size: 28.5vw;
  line-height: 0.6;
  position: absolute;
  bottom: 40px;
  left: 16px;
  padding-top: 50px;
  overflow: hidden;
}

.logo__char {
  display: inline-block;
  will-change: transform;
}

.menu-options {
  list-style: none;
  padding: 0;
  margin: 0;
  margin-bottom: 100px;
  display: flex;
  flex-direction: column;
  gap: 35px;
}

.menu-option {
  overflow: hidden;
  position: relative;
  display: inline-block;
}

:deep(.router-link-active) {
  &::before {
    transform: translateX(0) !important;
  }
}

/* TRANSITIONS */

/* Menu Controls */
.menu-controls-leave-active {
  transition: transform 0.5s;
  position: absolute !important;
}

.menu-controls-leave-from {
  transform: rotate(0) translateY(0);
}

.menu-controls-leave-to {
  &.open-menu {
    transform: rotate(-5deg) translateY(-100%);
  }
  &.close-menu {
    transform: rotate(5deg) translateY(100%);
  }
}

.menu-controls-enter-active {
  transition: transform 0.5s;
}

.menu-controls-enter-from {
  &.open-menu {
    transform: rotate(-5deg) translateY(-100%);
  }
  &.close-menu {
    transform: rotate(5deg) translateY(100%);
  }
}

.menu-controls-enter-to {
  transform: rotate(0) translateY(0);
}
/* End Menu Controls */
